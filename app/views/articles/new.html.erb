<h1 style="text-align:center">Create a new article</h1>

<!-- 
Possible errors based on our validadition at models/articles.rb

["Title can't be blank",                                                      
 "Title is too short (minimum is 6 characters)",                              
 "Description can't be blank"]
 -->

<% if @article.errors.any? %>
    <h2 style="color: red; background-color:black; width:45%">The following errors prevented the article from being created.</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>



<%= form_with scope: :article, data: { turbo: false }, url:articles_path, local:true do |f|%>
    <p>
    <%= f.label :title%></br>
    <%= f.text_field :title%>
    </p>

    <p>
    <%= f.label :description%></br>
    <%= f.text_area :description%>
    </p>

    <p>
    <%= f.submit %>
    </p>
<%end%>

<h3><%= link_to 'Return to articles listing', articles_url %> </h3>
